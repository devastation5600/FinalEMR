@using FinalEMR.Utility

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Patient List";
}

<br />

@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Doctor) || User.IsInRole(SD.Role_Privi_Nurse))
{
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Patient List </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Patient</a>
        </div>
    </div>


    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:102%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Height</th>
                    <th>Weight</th>
                    <th>Prescriptions</th>
                    <th>Comments</th>
                    <th>Allergies</th>
                    <th>Doctor</th>
                    <th>Nurse</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
    @section Scripts{

        <script src="~/js/patient.js"></script>
    }
}
else
{
   <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Patient List </h2>
        </div>
   </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:102%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Height</th>
                    <th>Weight</th>
                    <th>Prescriptions</th>
                    <th>Comments</th>
                    <th>Allergies</th>
                    <th>Doctor</th>
                    <th>Nurse</th>
                </tr>
            </thead>
        </table>
    </div>
    @section Scripts{
        <script src="~/js/patientUnAuth.js"></script>
    }
}
