@model IEnumerable<FinalEMR.Models.Patient>

@{
    ViewData["Title"] = "Home";    
}
     
<div class="row pb-3 backgroundWhite">
    @foreach (var patient in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@patient.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5 text-primary"><b style="color:#2c3e50">@patient.FirstName</b> <b style="color:#2c3e50">@patient.LastName</b>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Date of Birth <b class="">@patient.DateOfBirth</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon"><b class="">@patient.Comments</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@patient.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
