@model FinalEMR.Models.Patient
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <input hidden asp-for="Id"/>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.FirstName  @Model.LastName</h1>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">Prescription: @Model.Prescription.Name</span>
                    <span class="badge badge-success pt-2" style="height:30px;">Allergy: @Model.Allergy.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">DOB : @Model.DateOfBirth.Day/@Model.DateOfBirth.Month/@Model.DateOfBirth.Year </h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">SSN: @Model.SocialSecurity</h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col bg-secondary border-bottom">
                                    <div>Height</div>
                                </div>
                                <div class="p-2 col bg-secondary border-bottom">
                                    <div>Weight</div>
                                </div>
                                <div class="p-3 col bg-secondary border-bottom">
                                    <div>Phone Number</div>
                                </div>
                                <div class="p-4 col-2 bg-secondary border-bottom">
                                    <div>Email Address</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col bg-secondary">
                                    <div>@Model.Height</div>
                                </div>
                                <div class="p-2 col bg-secondary">
                                    <div>@Model.Weight</div>
                                </div>
                                <div class="p-3 col bg-secondary">
                                    <div>@Model.PhoneNumber</div>
                                </div>
                                <div class="p-4 col bg-secondary">
                                    <div>@Model.EmailAddress</div>
                                </div>
                            </div>
                            <br />
                            <div class="row pl-2">
                                @Html.Raw(Model.Comments)
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div> 
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</form>

